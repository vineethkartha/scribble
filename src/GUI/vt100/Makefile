Includes = ./includes
CXX = g++
CFLAGS = -std=c++11 -g


#TestFiles = ./tests/unittest.cpp
# Libs=#whatever libraries you need to provide to g++

guilib.o:guilib.cpp
	$(CXX) $(CFLAGS) -I $(Includes) -c -o ../../guilib.o guilib.cpp

clean:
	rm *.o *.log
buildtests:$(TestFiles)
	$(CXX)  $(CFLAGS) -o unittest -lboost_unit_test_framework $(TestFiles)
runtest:unittest
	./unittest >report.log
